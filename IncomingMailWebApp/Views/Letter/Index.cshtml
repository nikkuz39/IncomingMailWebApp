@model IncomingMailWebApp.Models.ViewModelLetter;
@{
    ViewData["Title"] = "Letter";
}
<h3>@ViewData["Title"]</h3>

<form asp-action="searchletter" asp-controller="letter">
    <div class="form-group">
        <label class="control-label">Id</label>
        <input type="text" name="id" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thread>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Date</th>
            <th>Content</th>
            <th></th>
        </tr>
    </thread>
    <tbody>
        @if (Model == null)
        {
            <tr><tg>No data</tg></tr>
        }
        else
        {
            @foreach (var mail in Model.Mails)
            {
                <tr>
                    <td>@mail.Id</td>
                    <td>@mail.LetterTitle</td>
                    <td>@mail.DateOfRegistration</td>
                    <td>@mail.ContentLetter</td>                    
                    <td>
                        <a asp-action="editletter" asp-controller="letter" asp-route-id="@mail.Id">Edit</a>
                        <a asp-action="deleteletter" asp-controller="letter" asp-route-id="@mail.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
