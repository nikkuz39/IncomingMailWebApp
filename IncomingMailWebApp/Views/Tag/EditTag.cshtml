@model IncomingMailWebApp.Models.Tag;
@{
    ViewData["Title"] = "Edit Tag";
}
<h3>@ViewData["Title"]</h3>

<form asp-action="edittag" asp-controller="tag" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" asp-for="TagName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
