@model IncomingMailWebApp.Models.Addressee;
@{
    ViewData["Title"] = "Edit Addressee";
}
<h3>@ViewData["Title"]</h3>

<form asp-action="editaddressee" asp-controller="addressee" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" asp-for="AddresseeName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>