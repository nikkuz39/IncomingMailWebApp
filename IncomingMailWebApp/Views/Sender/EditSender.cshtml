@model IncomingMailWebApp.Models.Sender;
@{
    ViewData["Title"] = "Edit Sender";
}
<h3>@ViewData["Title"]</h3>

<form asp-action="editsender" asp-controller="sender" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input type="text" asp-for="SenderName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>